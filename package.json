{
  "name": "mes-microservices-starter-template",
  "version": "0.1.0",
  "author": "DVSA",
  "license": "MIT",
  "description": "A starter template for lambda microservices in the MES project",
  "homepage": "https://github.com/dvsa/mes-microservices-starter-template#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-microservices-starter-template.git"
  },
  "dependencies": {
    "aws-sdk": "^2.389.0",
    "moment": "^2.23.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.13",
    "@types/aws-sdk": "^2.7.0",
    "@types/jasmine": "^2.8.9",
    "@types/node": "^10.12.0",
    "@types/supertest": "^2.0.7",
    "aws-lambda-test-utils": "^1.3.0",
    "aws-sdk-mock": "^4.3.0",
    "husky": "^1.3.1",
    "jasmine": "^3.3.1",
    "jasmine-spec-reporter": "^4.2.1",
    "json-schema-to-typescript": "^6.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.2",
    "serverless": "^1.36.3",
    "serverless-dynamodb-local": "^0.2.35",
    "serverless-offline": "^4.2.0",
    "serverless-webpack": "^5.2.0",
    "supertest": "^3.4.2",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "^3.1.3",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.2",
    "yamljs": "^0.3.0"
  },
  "scripts": {
    "clean": "rimraf build artefacts",
    "compile": "rm -rf build && tsc",
    "compile-no-emit": "tsc --noEmit -p .",
    "bootstrap": "json2ts schema/exampleSchema.json > src/common/domain/Schema.d.ts",
    "lint": "tslint --project tslint.json",
    "lint:fix": "tslint --fix -p ./",
    "package": "./package.sh",
    "postci": "npm run bootstrap",
    "postinstall": "npm run bootstrap",
    "prepush": "npm run security-scan && npm run lint && npm test",
    "security-scan": "git secrets --scan && git log -p | scanrepo",
    "start": "npm run compile && sls dynamodb install && sls offline start",
    "test": "npm run compile && jasmine",
    "test:integration": "npm run compile && jasmine build/spec/example.spec.js"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run security-scan && npm run lint && npm test && npm run test:integration",
      "pre-commit": "run-s lint:fix lint compile-no-emit"
    }
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-microservices-starter-template/issues"
  }
}
